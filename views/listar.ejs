<%- include('partials/header') %>

<main class="container py-5">
  <a href="/create" class="btn btn-success mb-3">Crear nuevo producto</a>

  <h1 class="text-center mb-5 text-primary display-4">Listado de Productos</h1>

  <!-- Lista de productos -->
  <div class="row g-4">
    <% if (productos.length > 0) { %>
      <% productos.forEach(producto => { %>
        <div class="col-lg-3 col-md-4 col-sm-6">
          <div class="card shadow-sm rounded-lg border-0 overflow-hidden h-100">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-dark font-weight-bold text-truncate" style="max-width: 100%;">
                <%= producto.nombre %>
              </h5>
              <p class="card-text text-muted" style="flex-grow: 1;">
                <%= producto.descripcion %>
              </p>
              <div class="d-flex justify-content-between align-items-center mb-3">
                <strong>S/ <%= Number(producto.precio).toFixed(2) %></strong>

              </div>
              <div class="d-flex justify-content-between mt-auto">
                <a href="/producto/actualizar/<%= producto.id %>" class="btn btn-primary btn-sm w-100 me-2 text-white">
                  <i class="bi bi-pencil"></i> Actualizar
                </a>
                <a href="/producto/eliminar/<%= producto.id %>" class="btn btn-danger btn-sm w-100 ms-2 text-white" onclick="return confirm('¿Estás seguro de que deseas eliminar este producto?');">
                  <i class="bi bi-trash"></i> Eliminar
                </a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-center">No hay productos registrados.</p>
    <% } %>
  </div>
</main>

<%- include('partials/footer') %>
